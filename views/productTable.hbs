<div class="modal fade" id="editform" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lable">Edit Products</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="exampleFormControlInput1">Barcode</label>
            <input type="text" class="form-control" required="required" readonly="readonly" id="barcode">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" class="form-control" autocomplete="off" id="name">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">OG Price</label>
            <input type="text" class="form-control" id="ogPrice">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">SL Price</label>
            <input type="number" class="form-control" id="slPrice">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Category</label>
            <input type="number" class="form-control" id="category">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Created</label>
            <input type="datetime-local" class="form-control" id="created">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Quantity</label>
            <input type="number" class="form-control" required="required" readonly="readonly"  id="quantity">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Sold</label>
            <input type="number" class="form-control" required="required" readonly="readonly"  id="sold">
          </div>
        </form>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="editSpecticalItem" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
